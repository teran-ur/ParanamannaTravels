rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Vehicles: Public read, Admin write
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Bookings:
    // - Create: Public if status is pending
    // - Read/Update/Delete: Admin only
    match /bookings/{bookingId} {
      allow create: if request.resource.data.status == 'PENDING';
      allow read, update, delete: if true;
    }

    // Admins:
    // - Read: User can read their own doc
    // - Write: Admin only (or restricted via console)
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Managed manually in console for security
    }
  }
}
